@model List<PRG_4_PROJEK.Models.mhsLap>
@{
    ViewData["Title"] = "Detail Mahasiswa";
    int no = 1;
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Detail Jam Plus vs Jam Minus</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <p></p>
                    <table class="table datatable" id="myTable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Deskripsi</th>
                                <th scope="col">Jam Plus</th>
                                <th scope="col">Jam Minus</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mahasiswa in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@mahasiswa.deskripsi</td>
                                    <td>@mahasiswa.jam_plus</td>
                                    <td>@mahasiswa.jam_minus</td>
                                    <td>

                                        @* <a asp-controller="Mahasiswa" asp-action="Edit" asp-route-id="@mahasiswa.nim" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a> *@

                                        @* <button class="btn btn-sm btn-danger delete-button" data-id="@mahasiswa.nim">
                                    <i class="fas fa-trash"></i>
                                    </button> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
