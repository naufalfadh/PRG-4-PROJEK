@model PRG_4_PROJEK.Models.KegiatanModel

@{
    ViewData["Title"] = "Tambah Kegiatan";
}



<body>
    <div class="pagetitle">
        <h1>Kegiatan</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Kegiatan</li>
                <li class="breadcrumb-item active">Tambah Kegiatan</li>
            </ol>
        </nav>
    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tambah Kegiatan</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="deskripsi">Deskripsi Kegiatan <span style="color: red;">*</span></label>
                        <input asp-for="deskripsi" type="text" class="form-control input-with-border" placeholder="Masukkan Kegiatan">
                        <span asp-validation-for="deskripsi" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="kapasitas">Kapasitas <span style="color: red;">*</span></label>
                        <input asp-for="kapasitas" type="number" class="form-control input-with-border" placeholder="Masukkan Jumlah Kapasitas">
                        <span asp-validation-for="kapasitas" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="tglmulai">Tanggal Mulai <span style="color: red;">*</span></label>
                        <input asp-for="tglmulai" type="datetime-local" class="form-control input-with-border" placeholder="Pilih Tanggal Mulai">
                        <span asp-validation-for="tglmulai" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="tglselesai">Tanggal Selesai <span style="color: red;">*</span></label>
                        <input asp-for="tglselesai" type="datetime-local" class="form-control input-with-border" placeholder="Pilih Tanggal Selesai">
                        <span asp-validation-for="tglselesai" class="text-danger"></span>
                    </div>


                    <div class="form-group mb-3">
                        <input asp-for="status" type="text" class="form-control input-with-border" placeholder="Status" value="Belum dikerjakan" hidden>
                    </div>
                    <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                            <a asp-controller="Kegiatan" asp-action="Index" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<script>
    function togglePassword(button) {
        var input = $(button).closest('.form-group').find('input');
        var type = input.attr('type') === 'password' ? 'text' : 'password';
        input.attr('type', type);
        $(button).find('i').toggleClass('fa-eye fa-eye-slash');
    }
</script>