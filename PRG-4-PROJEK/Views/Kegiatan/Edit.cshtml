@model PRG_4_PROJEK.Models.KegiatanModel
@{
    ViewData["Title"] = "Edit Kegiatan";
}


<div class="content">
    <div class="contrainer-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Kegiatan</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Kegiatan" asp-action="Edit">

                            <div class="form-group mb-3">
                                <label asp-for="deskripsi" class="control-label">Deskripsi Kegiatan <span style="color: red;">*</span></label>
                                <input asp-for="deskripsi" class="form-control" />
                                <span asp-validation-for="deskripsi" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="kapasitas" class="control-label">Kapasitas <span style="color: red;">*</span></label>
                                <input asp-for="kapasitas"  class="form-control" />
                                <span asp-validation-for="kapasitas" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="tglmulai" class="control-label">Tanggal Mulai <span style="color: red;">*</span></label>
                                <input asp-for="tglmulai" class="form-control" />
                                <span asp-validation-for="tglmulai" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="tglselesai" class="control-label">Tanggal Selesai <span style="color: red;">*</span></label>
                                <input asp-for="tglselesai" class="form-control" />
                                <span asp-validation-for="tglselesai" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="status">Status</label>
                                <select asp-for="status" class="form-control">
                                    <option value="Belum Dikerjakan">Belum Dikerjakan</option>
                                    <option value="Sedang Dikerjakan">Sedang Dikerjakan</option>
                                    <option value="Sudah Dikerjakan">Sudah Dikerjakan</option>
                                </select>
                            </div>

                            <div class="form-group mb-3">
                                <input asp-for="id_kegiatan" type="text" class="form-control" hidden />
                            </div>
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>