    * License: https://bootstrapmade.com/license/
    ======================================================== -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>
    <script src="https://cdn.jsdeLivr.net/npm/@@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/sweetalert@2.1.2/dist/sweetalert.min.js"></script>

</head>
<style>
.custom-h10 {
    font-size: 12px; /* Atur ukuran font sesuai keinginan Anda */
    font-weight: bold; /* Atur ketebalan font sesuai keinginan Anda */
}

    .custom-logout-btn {
        color: red !important;
    }
</style>


<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        @{
            var httpContext = ViewContext.HttpContext;
        }
        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="content/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">Monitoring</span>
            </a>
             
        </div><!-- End Logo -->

        <li class="nav-item dropdown ms-auto">
            
            <button class="btn btn-primary btn-sm" onclick="yourFunction()">
                <a class="nav-link collapsed" asp-controller="Dashboard" asp-action="Index">
                Pengajuan</a>
            </button>
            <a class="dropdown-toggle show-dropdown-arrow btn btn-inverse-primary btn-sm" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                Hai, <strong>@httpContext.Session.GetString("Nama") </strong>
            </a>


            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                <a class="dropdown-item custom-logout-btn" href="@Url.Action("Logout", "Login")">
                    <i class="btn-icon bi bi-box-arrow-in-right"></i>
                    Logout
                </a>
            </div>

        </li>


    </header><!-- End Header -->
   
    <main id="main" class="main">

   
        @RenderBody()

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
       
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="content/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="content/assets/vendor/quill/quill.min.js"></script>
    <script src="content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="content/assets/js/main.js"></script>

</body>

</html>