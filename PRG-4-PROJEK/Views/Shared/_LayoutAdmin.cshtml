<body>

    <!-- ======= Header ======= -->
   <header id="header" class="header fixed-top d-flex align-items-center">
    @{
        var httpContext = ViewContext.HttpContext;
    }
    <div class="d-flex align-items-center justify-content-between">
        <a href="index.html" class="logo d-flex align-items-center">
            <img src="content/assets/img/logo.png" alt="">
            <span class="d-none d-lg-block">Monitoring</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->
    <li class="nav-item dropdown ms-auto">
        <a class="dropdown-toggle show-dropdown-arrow btn btn-inverse-primary btn-sm" id="profileDropdown" href="#" data-bs-toggle="dropdown">
            Hai, <strong>@httpContext.Session.GetString("Nama") (@httpContext.Session.GetString("Role"))</strong>
        </a>

        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
            <a class="dropdown-item custom-logout-btn" href="@Url.Action("Logout", "Login")">
                <i class="btn-icon bi bi-box-arrow-in-right"></i>
                Logout
            </a>
        </div>
    </li>
</header>
    <!-- ======= Sidebar ======= -->
        
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">
            @if (httpContext.Session.GetString("Role") == "admin")
            {
                <li class="nav-heading">Dashboard</li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house-door-fill"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-heading">Transaksi</li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="DaftarKegiatan" asp-action="IndexP">
                        <i class="bi bi-box-arrow-up-right"></i>
                        <span>Pendaftaran</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="DaftarKegiatan" asp-action="IndexJP">
                        <i class="bi bi-box-arrow-down"></i>
                        <span>Pengajuan</span>
                    </a>
                </li>
                <li class="nav-heading">Master</li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Akun" asp-action="Index">
                        <i class="bi bi-person-bounding-box"></i>
                        <span>Karyawan</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Mahasiswa" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Mahasiswa</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Kegiatan" asp-action="Index">
                        <i class="bi bi-person-lines-fill"></i>
                        <span>Kegiatan</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Aktifitas" asp-action="Index">
                        <i class="bi bi-journal-text"></i>
                        <span>Aktivitas</span>
                    </a>
                </li>
               
            } 
            @if (httpContext.Session.GetString("Role") == "sekprod")
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-grid"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-patch-plus-fill"></i>
                        <span>Laporan </span>
                    </a>
                </li>
               
            }
            else
            {
                
            }
       
            
            
        </ul>
    </aside><!-- End Sidebar-->

    <main id="main" class="main">

   
        @RenderBody()

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
       
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="content/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="content/assets/vendor/quill/quill.min.js"></script>
    <script src="content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="content/assets/js/main.js"></script>

</body>

</html>