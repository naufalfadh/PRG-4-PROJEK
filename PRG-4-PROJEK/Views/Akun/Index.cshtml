@model List<PRG_4_PROJEK.Models.KaryawanModel>
@{
    ViewData["Title"] = "Akun";
    int no = 1;
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Akun</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <a class="btn btn-primary" asp-action="Create">Tambah Akun</a>
                    <p></p>
                    <table class="table datatable" id="myTable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">NPK</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Jenis Kelamin</th>
                                <th scope="col">Role</th>
                                <th scope="col">Status</th>
                                <th scope="col">Aksi</th>
                            </tr>
                        </thead>
                       <tbody>
                            @foreach (var akun in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@akun.npk</td>
                                    <td>@akun.nama</td>
                                    <td>@akun.jk</td>
                                    <td>@akun.role</td>
                                    <td>
                                        @if (akun.status == "tidak aktif")
                                        {
                                            <span class="badge bg-danger">@akun.status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@akun.status</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="akun" asp-action="Edit" asp-route-id="@akun.npk" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @if (akun.status == "tidak aktif")
                                        {

                                            <button class="btn btn-sm btn-success activate-button" data-id="@akun.npk">
                                                <i class="fas fa-check"></i>
                                            </button>

                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-danger deactivate-button" data-id="@akun.npk">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

    $(document).ready(function () {
        $(".delete-button").click(function () {
            var akunId = $(this).data("id");
            console.log(akunId);

            Swal.fire({
                title: "Hapus akun?",
                text: "Apakah anda yakin ingin menghapus akun ini?",
                icon: "warning",
                confirmButtonText: "Iya",
                showDenyButton: true,
                denyButtonText: "Tidak",
                dangerMode: true,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/akun/Delete/" + akunId, // Perbaiki URL dengan menambahkan tanda "/"
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire("Sukses!", data.message, "success").then(() => {
                                    // Refresh halaman setelah pengguna menekan tombol "OK"
                                    location.reload();
                                });
                            } else {
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            swal("Error", "Terjadi kesalahan saat menghapus akun.", "error");
                        }
                    });
                }
            });
        });
    });
</script>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        $(".activate-button, .deactivate-button").click(function () {
            var akunId = $(this).data("id");
            var action = $(this).hasClass("activate-button") ? "Activate" : "Deactivate";

            Swal.fire({
                title: action + " akun?",
                text: "Apakah anda yakin ingin " + action.toLowerCase() + " akun ini?",
                icon: "warning",
                confirmButtonText: "Iya",
                showDenyButton: true,
                denyButtonText: "Tidak",
                dangerMode: true,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/akun/" + action + "/" + akunId,
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire("Sukses!", data.message, "success").then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Error", "Terjadi kesalahan saat " + action.toLowerCase() + " akun.", "error");
                        }
                    });
                }
            });
        });
    });
</script>

