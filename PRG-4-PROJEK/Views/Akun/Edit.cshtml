@model PRG_4_PROJEK.Models.KaryawanModel
@{
    ViewData["Title"] = "Edit Akun";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Akun</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Akun" asp-action="Edit">
                            <div class="form-group mb-3">
                                <label asp-for="npk" class="control-label">NPK <span style="color: red;">*</span></label>
                                <input asp-for="npk" class="form-control" readonly />
                                <span asp-validation-for="npk" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="nama" class="control-label">Nama<span style="color: red;">*</span></label>
                                <input asp-for="nama" class="form-control" />
                                <span asp-validation-for="nama" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="password" class="control-label">Password <span style="color: red;">*</span></label>
                                <div class="input-group">
                                    <input asp-for="password" type="password" class="form-control" id="password" />
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="jk">Jenis Kelamin <span style="color: red;">*</span></label>
                                <select asp-for="jk" class="form-control input-with-border">
                                    <option value="" disabled selected>Pilih Jenis Kelamin</option>
                                    <option value="laki-laki">Laki-Laki</option>
                                    <option value="perempuan">Perempuan</option>
                                </select>
                                <span asp-validation-for="jk" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="role">Role <span style="color: red;">*</span></label>
                                <select asp-for="role" class="form-control">
                                    <option value="admin">admin</option>
                                    <option value="sekprod">sekprod</option>
                                </select>
                                <span asp-validation-for="role" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <input asp-for="status" type="text" class="form-control" placeholder="Status" value="aktif" hidden>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                                <a asp-controller="Akun" asp-action="Index" class="btn btn-light">Batal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Set the password input value using JavaScript
    document.getElementById('password').value = '@Model.password';

    function togglePassword() {
        var input = document.getElementById('password');
        var type = input.type === 'password' ? 'text' : 'password';
        input.type = type;
    }
</script>
