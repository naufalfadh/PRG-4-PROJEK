@model PRG_4_PROJEK.Models.MahasiswaModel
@{
    ViewData["Title"] = "Edit Mahasiswa";
}


<div class="content">
    <div class="contrainer-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                 
                    <div class="card-body">
                        <div class="pagetitle">
                            <nav>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">Kegiatan</li>
                                    <li class="breadcrumb-item active">Edit Data Mahasiswa</li>
                                </ol>
                            </nav>
                        </div>
                        <form method="post" asp-controller="Mahasiswa" asp-action="Edit">
                            <div class="form-group mb-3">
                                <label asp-for="nim" class="control-label">NIM <span style="color: red;">*</span></label>
                                <input asp-for="nim" class="form-control" readonly />
                                <span asp-validation-for="nim" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="nama" class="control-label">Nama Mahasiswa <span style="color: red;">*</span></label>
                                <input asp-for="nama" class="form-control" />
                                <span asp-validation-for="nama" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="rfid" class="control-label">RFID <span style="color: red;">*</span></label>
                                <input asp-for="rfid" type="number" class="form-control" readonly />
                                <span asp-validation-for="rfid" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="pin" class="control-label">Ubah PIN <span style="color: red;">*</span></label>
                                <input asp-for="pin" type="number" class="form-control" id="pin" />
                                <span asp-validation-for="pin" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="jk">Jenis Kelamin <span style="color: red;">*</span></label>
                                <select asp-for="jk" class="form-control input-with-border">
                                    <option value="" disabled selected>Pilih Jenis kelamin</option>
                                    <option value="laki-laki">Laki-laki</option>
                                    <option value="perempuan">Perempuan</option>
                                </select>
                                <span asp-validation-for="jk" class="text-danger"></span>
                            </div>
@*                             <div class="form-group mb-3">
                                <input asp-for="jp" type="text" class="form-control input-with-border" value="jp" hidden>
                            </div>
                            <div class="form-group mb-3">
                                <input asp-for="jm" type="text" class="form-control input-with-border" value="jm" hidden>
                            </div>
                            <div class="form-group mb-3">
                                <input asp-for="softskil" type="text" class="form-control input-with-border" value="softskill" hidden>
                            </div> *@
                            <div class="form-group mb-3">
                                <input asp-for="status" type="text" class="form-control" placeholder="Status" value="aktif" hidden>
                            </div>
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                                <a asp-controller="Mahasiswa" asp-action="Index" class="btn btn-danger">Batal</a>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>